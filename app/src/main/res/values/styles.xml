<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BtnTxtStyle">
        <item name="android:textSize">@dimen/size_small_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/mono_3</item>
    </style>

    <style name="LargeTitleTxtStyle">
        <item name="android:textSize">@dimen/size_large_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/mono_3</item>
    </style>

    <style name="MiddleTitleTxtStyle">
        <item name="android:textSize">@dimen/size_middle_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/mono_3</item>
    </style>

    <style name="SmallTitleTxtStyle">
        <item name="android:textSize">@dimen/size_small_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/mono_3</item>
    </style>

    <style name="ContentsTxtStyle">
        <item name="android:textSize">@dimen/size_contents</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/mono_3</item>
    </style>

</resources>
