<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mono_f"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_header"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textAppearance="@style/SmallTitleTxtStyle">
        </TextView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/mono_0">
        </View>
    </LinearLayout>

    <TextView
        android:id="@+id/txt_dialog_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/contents_padding"
        android:gravity="center"
        android:textAppearance="@style/ContentsTxtStyle"
        android:lineSpacingExtra="4dp">
    </TextView>

    <Button
        android:id="@+id/btn_dialog_confirm"
        android:background="@drawable/btn_red_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_btn"
        android:layout_marginTop="12dp"
        android:text="@string/ok"
        android:textAppearance="@style/BtnTxtStyle"
        style="?android:attr/borderlessButtonStyle">
    </Button>
</LinearLayout>